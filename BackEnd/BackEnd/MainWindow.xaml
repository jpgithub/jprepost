<Window x:Class="BackEnd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="Auto" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.RowSpan="2">
            <Label Name="lblTime" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Name="FrameTime" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Name="FrameSet" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Name="rewindBtn" Content="Rewind" Width="75" Click="rewindBtn_Click"/>
            <Button Name="playBtn" Content="Play" Width="75" Click="playBtn_Click"/>
            <Button Name="forwardBtn" Content="Forward" Width="75" Click="forwardBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
